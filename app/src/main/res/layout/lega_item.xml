<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_placeholder"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/nomeLegaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Lega"
        android:textSize="18sp"
        android:layout_toEndOf="@id/logoImageView"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/adminTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Lega"
        android:textSize="14sp"
        android:layout_toEndOf="@id/logoImageView"
        android:layout_below="@id/nomeLegaTextView"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/uniscitiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unisciti"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>