<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenuto principale della schermata Home -->

    <!-- Footer con le icone-pulsanti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#8A2BE2"
    android:padding="8dp">

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Home" />

    <Button
        android:id="@+id/buttonStorico"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Storico" />

    <Button
        android:id="@+id/buttonGiocatori"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Giocatori" />

    <Button
        android:id="@+id/buttonClassifica"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Classifica" />

</LinearLayout>
    </RelativeLayout>