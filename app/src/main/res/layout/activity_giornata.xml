<!-- activity_crea_giornata.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewInizio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Inizio:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextInizio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewInizio"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="datetime"
        android:hint="Inserisci la data e l'ora di inizio"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewFine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextInizio"
        android:layout_marginTop="16dp"
        android:text="Fine:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextFine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFine"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="datetime"
        android:hint="Inserisci la data e l'ora di fine"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonConfermaGiornata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextFine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Conferma"
        android:textSize="18sp" />

</RelativeLayout>
