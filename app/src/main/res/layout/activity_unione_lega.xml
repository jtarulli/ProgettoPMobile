<!-- Layout principale dell'activity -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <SearchView
        android:id="@+id/unioneLega_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Cerca Lega..." />

    <!-- RecyclerView per visualizzare l'elenco delle leghe -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLeghe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_lega" />

</LinearLayout>
